<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background" >
    <!-- android:background="#eaeaea" >  -->

     <Button
         android:id="@+id/online"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10sp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="32dp"
         android:text="@string/online"
         android:drawableRight="@drawable/rightarrow"
         android:drawableLeft="@drawable/arrowblack"
         android:textColor="#ffffff"
         android:background="#000000" />

     <Button
         android:id="@+id/favorites"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10sp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/online"
         android:layout_marginTop="15sp"
         android:text="@string/favorites"
         android:drawableLeft="@drawable/leftarrow"
         android:drawableRight="@drawable/arrowblack"
         android:textColor="#ffffff"
         android:background="#000000" />

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/favorites"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="44dp"
         android:src="@drawable/tabhero_icon"
         android:contentDescription="@string/imageDescAppIcon" />

</RelativeLayout>