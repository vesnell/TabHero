<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
 
  <!--<TextView android:text="@string/favorites_layout"
            android:padding="15dip"
            android:textSize="18dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/> -->
            
  		<EditText
        	android:id="@+id/editFavPerformer"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:digits="aąbcćdeęfghijklłmnńoópqrsśtuvwxyzźż1234567890 "
        	android:hint="@string/hint_author" />

        <Button
            android:id="@+id/searchFavBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="searchView"
            android:text="@string/search"
            android:layout_below="@+id/editFavPerformer" />
        
        <ListView
            android:id="@+id/searchFavListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/searchFavBtn" >

        </ListView>
 
</LinearLayout>