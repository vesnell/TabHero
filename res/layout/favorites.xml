<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/linearFav"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#eaeaea">
 
  <!--<TextView android:text="@string/favorites_layout"
            android:padding="15dip"
            android:textSize="18dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/> -->
        <LinearLayout
                  android:id="@+id/editAndButton"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:background="@null" >
            
  		<EditText
        	android:id="@+id/editFavPerformer"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.76"
        	android:singleLine="true"
        	android:hint="@string/hint_author" />

        <ImageButton
            android:id="@+id/searchFavBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="searchView"
            android:text="@string/search"
            android:textColor="#ffffff"
    		android:background="#eaeaea"
    		android:src="@drawable/loop_border"
    		android:drawableBottom="@drawable/white_line" />
        </LinearLayout>
        
        <ListView
            android:id="@+id/searchFavListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editAndButton" >

        </ListView>
 
</RelativeLayout>