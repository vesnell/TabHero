<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
  <!-- <TextView android:text="@string/search_layout"
            android:padding="15dip"
            android:textSize="18dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/> -->

        <TextView
            android:id="@+id/chosenFavPerformer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="5dip"
            android:text="@string/chosen_performer"
            android:textSize="18dip"
            android:gravity = "center"
            android:textColor="#ffffff"
         	android:background="#000000" />
        <LinearLayout
                  android:id="@+id/editAndButton"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:layout_below="@+id/chosenFavPerformer" >

        <EditText
            android:id="@+id/editFavTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.76"
            android:singleLine="true"
            android:hint="@string/hint_title" />

        <ImageButton
            android:id="@+id/searchFavTitleBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="searchView"
            android:text="@string/search"
            android:textColor="#ffffff"
    		android:background="#eaeaea"
    		android:src="@drawable/loop_border"
    		android:drawableBottom="@drawable/white_line" />
        </LinearLayout>

        <ListView
            android:id="@+id/searchFavTitleListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editAndButton" >

        </ListView>
 
</RelativeLayout>